<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.etlap.WelcomeController">
   <children>
      <HBox spacing="10.0">
         <children>
            <Button fx:id="newFoodBtn" mnemonicParsing="false" onAction="#newFoodBtnClick" text="Új étel felvétele" />
            <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#deleteBtnClick" style="-fx-background-color: red;" text="Törlés" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <TableView fx:id="menuTable" onMouseClicked="#menuTableClicked" prefHeight="300.0">
              <columns>
                <TableColumn fx:id="nameCol" prefWidth="100.0" text="Név" />
                <TableColumn fx:id="categoryCol" prefWidth="125.0" text="Kategória" />
                  <TableColumn fx:id="priceCol" prefWidth="75.0" text="Ár" />
              </columns>
            </TableView>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label prefWidth="150.0" text="Leírás:">
                     <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="descriptionTxt" layoutX="10.0" layoutY="10.0" wrapText="true">
                     <padding>
                        <Insets left="4.0" right="4.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
