<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox onMouseClicked="#windowClicked" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.etlap.WelcomeController">
   <children>
      <HBox spacing="10.0">
         <children>
            <Button fx:id="newFoodBtn" mnemonicParsing="false" onAction="#newFoodBtnClick" text="Új étel felvétele" />
            <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#deleteBtnClick" style="-fx-background-color: red;" text="Törlés" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <TitledPane animated="false" text="Áremelés">
         <content>
            <VBox>
               <children>
                  <HBox spacing="5.0">
                     <children>
                        <Spinner fx:id="percentageSpinner">
                           <valueFactory>
                              <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="5" initialValue="5" max="50" min="5" />
                           </valueFactory>
                        </Spinner>
                        <Label text="\%">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#percentageBtnClick" text="Emelés">
                           <opaqueInsets>
                              <Insets left="20.0" />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <Spinner fx:id="hufSpinner">
                           <valueFactory>
                              <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="50" initialValue="50" max="3000" min="50" />
                           </valueFactory>
                        </Spinner>
                        <Label text="Ft">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#hufBtnClick" text="Emelés">
                           <opaqueInsets>
                              <Insets left="20.0" />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </TitledPane>
      <HBox spacing="10.0">
         <children>
            <TableView fx:id="menuTable" onMouseClicked="#menuTableClicked" prefHeight="300.0">
              <columns>
                <TableColumn fx:id="nameCol" prefWidth="100.0" text="Név" />
                <TableColumn fx:id="categoryCol" prefWidth="125.0" text="Kategória" />
                  <TableColumn fx:id="priceCol" prefWidth="75.0" text="Ár" />
              </columns>
            </TableView>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label prefWidth="150.0" text="Leírás:">
                     <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="descriptionTxt" layoutX="10.0" layoutY="10.0" wrapText="true">
                     <padding>
                        <Insets left="4.0" right="4.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
